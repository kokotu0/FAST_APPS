export const Route = createFileRoute("/_layout/form-register/test")({
  component: RouteComponent,
});

function RouteComponent() {
  return (
    <Form
      schema={schema}
      uiSchema={uiSchema}
      validator={validator}
      templates={{
        ObjectFieldTemplate,
      }}
      onSubmit={({ formData }) => {
        toast.success("ì œì¶œ ì™„ë£Œ!");
